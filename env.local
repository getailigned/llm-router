# =============================================================================
# LLM Router Service - Local Development Environment
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# GOOGLE CLOUD VERTEX AI CONFIGURATION
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=htma-project-dev
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json
VERTEX_AI_LOCATION=us-east1
VERTEX_AI_ENDPOINT_ID=htma-llm-router-endpoint

# =============================================================================
# AZURE AD SECURITY & AUTHENTICATION (Placeholder for local testing)
# =============================================================================
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-service-principal-client-id
AZURE_CLIENT_SECRET=your-service-principal-secret
AZURE_AD_INSTANCE=https://login.microsoftonline.com/
AZURE_AD_AUDIENCE=api://your-llm-router-app-id
SERVICE_AUTH_ENABLED=false
JWT_SECRET=local-dev-secret-key-change-in-production

# =============================================================================
# AZURE DATABASE CONFIGURATION (Placeholder for local testing)
# =============================================================================
DATABASE_URL=postgresql://user:pass@localhost:5432/htma_llm_router
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# VECTOR STORAGE CONFIGURATION
# =============================================================================
POSTGRES_VECTOR_EXTENSION=pgvector
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.7

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,docx,txt,csv,jpg,png,py,js,ts,json
MAX_REQUEST_SIZE=10MB
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# ROUTING CONFIGURATION
# =============================================================================
ROUTING_CONFIG_FILE=src/config/routing-priorities.json
CONFIG_RELOAD_INTERVAL=300
CONFIG_VALIDATION_ENABLED=true
CONFIG_BACKUP_ENABLED=true
CONFIG_BACKUP_RETENTION=7

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
DEFAULT_MODEL=claude-4.1-opus
FALLBACK_MODEL=claude-4-sonnet
MAX_TOKENS=8192
TEMPERATURE=0.7
TOP_P=0.9

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_KEYS=10000
ENABLE_RESPONSE_CACHE=true
ENABLE_ROUTING_CACHE=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ENABLE_CORS=true
CORS_ORIGIN=*
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=false
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
LOG_REQUESTS=true
LOG_RESPONSES=false
